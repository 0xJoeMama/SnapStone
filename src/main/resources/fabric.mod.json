{
    "schemaVersion": 1,
    "id": "snapstone",
    "version": "${version}",

    "name": "SnapStone",
    "description": "Start redstone with the snap of your fingers.",
    "authors": [
        "0xJoeMama",
        "KaloyanKYS",
        "BrianComics",
        "DigitalPear"
    ],
    "contact": {},

    "license": "MIT",
    "environment": "*",
    "entrypoints": {
        "client": [
            {
                "adapter": "kotlin",
                "value": "io.github.llamarama.team.snapstone.client.SnapStoneClientKt::init"
            }
        ],
        "main": [
            {
                "adapter": "kotlin",
                "value": "io.github.llamarama.team.snapstone.SnapStoneKt::init"
            }
        ]
    },

    "mixins": [
        "snapstone.mixins.json"
    ],

    "depends": {
        "fabricloader": ">=0.11.6",
        "fabric": "*",
        "minecraft": "1.17.1",
        "fabric-language-kotlin": ">=1.6.3+kotlin.1.5.21"
    }
}
